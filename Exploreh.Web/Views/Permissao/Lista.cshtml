@model Exploreh.Model.Permissao.PermissaoModel


@{
    ViewBag.Title = "Permissao de acesso";
}


@section Styles {
    @Styles.Render("~/bundles/toastr/css")
    @Styles.Render("~/bundles/sweetAlert/css")
}

<div class="panel-body list">
    <h2>Lista de Permissões de acesso</h2>

    <button onclick="location.href='@Url.Action("Cadastrar", "Permissao")'" class="btn w-xs btn-primary">Novo <i class="glyphicon glyphicon-plus"></i></button>

    @foreach (var tela in Model.Tela.ToList())
    {

        <div class="content animate-panel">
            <div class="row">
                <div class="col-lg-12">
                    <div class="hpanel">
                        <div class="panel-heading">
                            <div class="panel-tools">
                                <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                            </div>
                            Tela Relacionada aos Perfis
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive project-list">

                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>
                                            Nome
                                        </th>
                                        <th>
                                            Ativo
                                        </th>
                                        <th>
                                            Perfil
                                        </th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => tela.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => tela.Ativo)
                                        </td>
                                        <td>
                                            <button type="button"
                                                    class="btn btn-xs btn-primary"
                                                    onclick="location.href = '@Url.Action("Editar", "Perfil", new {id = tela.Id})'">
                                                Editar
                                            </button>
                                            |
                                            <button type="button"
                                                    class="btn btn-xs btn-info"
                                                    data-toggle="modal"
                                                    data-target="#myModalDetalhes"
                                                    onclick="Detalhes('@tela.Id', '@Url.Action("Detalhes", "Perfil")');">
                                                Detalhes
                                            </button>
                                            |
                                            <button type="button"
                                                    class="btn btn-xs btn-danger"
                                                    data-toggle="modal"
                                                    data-target="#myModalDelete"
                                                    onclick="Deletar('@tela.Id', '@Url.Action("Excluir", "Perfil")');">
                                                Excluir
                                            </button>
                                        </td>
                                    </tr>

                                    </tbody>

                                    <thead>
                                    <tr>
                                        <th>
                                            Perfis Vinculados:
                                        </th>
                                    </tr>
                                    </thead>
                                    @foreach (var perfil in tela.PerfilModel)
                                    {
                                        <tbody>
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => perfil.Nome)
                                            </td>
                                        </tr>
                                        </tbody>
                                    }


                                    

                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>