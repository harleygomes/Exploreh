@model Exploreh.Model.Usuario.UsuarioModel

@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="login-container">
        <div class="row">
            <div class="col-md-12">
                <div class="hpanel">
                    <div class="panel-body">
                            <div class="form-group">
                                <label class="control-label" for="username">Email</label>
                                <input type="text" placeholder="example@gmail.com" title="Entre com seu e-mail aqui" required="" value="" name="Email" id="Email" class="form-control">
                                <span class="help-block small">Seu único e-mail para acesso</span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="password">Senha</label>
                                <input type="password" title="Entre com sua senha aqui" placeholder="******" required="" value="" name="Senha" id="password" class="form-control">

                            </div>
                            <div class="checkbox">
                                <input type="checkbox" class="i-checks" checked>
                                Lembrar do login
                                <br/>
                                <p class="help-block small">(<b>Recomendamos:</b> Selecionar somente se este for seu pc pessoal)
                                </p>
                            </div>
                            <button class="btn btn-success btn-block" type="submit">Login</button>
                            <br/>
                            <div class="alert alert-danger" style="display: none">
                                <strong>Atenção!</strong> E-mail e/ou senha inválidos.
                            </div>
                      
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <strong>Exploreh</strong> Copyright @DateTime.Now.Year - <i class="glyphicon glyphicon-phone"></i> responsive <br/>
            </div>
        </div>
    </div>
}

@Scripts.Render("~/bundles/jquery/js")
<script type="text/javascript">

    $(document).ready(function() {

        notificar();

    });

    function notificar() {

        var notificacao = @(ViewBag.Notificacao.ToString().ToLower());
        if (notificacao === false ||notificacao === 'false') {
            $('.alert-danger').show();

        }
    }
</script>