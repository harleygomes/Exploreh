@model Exploreh.Model.Telas.TelaModel

@{
    ViewBag.Title = "Cadastrar Telas";
}

<style>
    .input-fields {
        margin: 10px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="content animate-panel">
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        </div>
                        Cadastro de Telas
                    </div>
                    <div class="panel-body">
                        <div style=""></div>
                        <div class="input-group input-fields">
                            <span class="input-group-addon">Nome</span>
                            <input id="Nome" type="text" class="form-control" name="Nome" placeholder="Nome da tela">
                        </div>

                        <div class="input-group input-fields">
                            <span class="input-group-addon">Descrição da página</span>
                            <textarea id="Descricao" type="text" class="form-control" name="Descricao" placeholder="Descrição da tela" rows="5"></textarea>
                        </div>

                        <div class="input-group input-fields">
                            <span class="input-group-addon">Url</span>
                            <input id="Url" type="text" class="form-control" name="Url" placeholder="Endereço da Url">
                        </div>
                        <div class="input-group input-fields">
                            <span class="input-group-addon">Atribuir permissão</span>
                            
                            @for (int i = 0; i < Model.PerfilModel.Count; i++)
                            {
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th>@Html.DisplayFor(x=>x.PerfilModel[i].Nome)</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>
                                                <div class="icheckbox_square-green text-success font-bold" style="position: relative;margin-left: 10px">
                                                    @Html.CheckBoxFor(x=>x.PerfilModel[i].IsChecked, new { @class = "i-checks" })
                                                    @Html.HiddenFor(x => x.PerfilModel[i].Id)
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                        </tbody>
                                    </table>
                                </div>

                            }

                        </div>

                        <div class="input-fields">
                            <button type="submit" class="btn w-xs btn-primary"> <i class="fa fa-check"></i> Salvar </button>
                        </div>
                    </div>

                    <div class="input-fields">
                        <button onclick="location.href='@Url.Action("Lista", "Tela")'" class="btn w-xs btn-danger"> <i class="glyphicon glyphicon-chevron-left"></i> Voltar </button>
                    </div>


                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
