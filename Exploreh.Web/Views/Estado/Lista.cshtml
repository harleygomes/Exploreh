@model IEnumerable<Exploreh.Model.UnidadeFederacao.UnidadeFederacaoModel>


<style>
    .input-fields {
        margin: 10px;
    }
</style>

@{
    ViewBag.Title = "Lista de Estados";
}

@section Styles {
    @Styles.Render("~/bundles/toastr/css")
    @Styles.Render("~/bundles/sweetAlert/css")
}

<div class="panel-body list">
    <h2>Lista de Perfis Cadastrados</h2>

    <button onclick="location.href='@Url.Action("Cadastrar", "Estado")'" class="btn w-xs btn-primary">Novo <i class="glyphicon glyphicon-plus"></i></button>

    <div class="content animate-panel">
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading">
                        @using (Html.BeginForm("Lista","Estado"))
                        {
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="hpanel">
                                        <div class="panel-body">
                                            <div class="input-group">
                                                <select id="IdPais" name="IdPais" class="form-control pais"></select>
                                                <div class="input-group-btn">
                                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="panel-tools">
                            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        </div>
                        Todos os estados Cadastrados
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive project-list">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Nome
                                        </th>
                                        <th>
                                            Sigla
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
            {
                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DcrNome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DcrSigla)
                                            </td>
                                            <td>
                                                <button type="button"
                                                        class="btn btn-xs btn-primary"
                                                        onclick="location.href = '@Url.Action("Editar", "Estado", new {id = item.IdUnidadeFederacao})'">
                                                    Editar
                                                </button>
                                                |
                                                <button type="button"
                                                        class="btn btn-xs btn-info"
                                                        data-toggle="modal"
                                                        data-target="#myModalDetalhes"
                                                        onclick="Detalhes('@item.Id', '@Url.Action("Detalhes", "Perfil")');">
                                                    Detalhes
                                                </button>
                                                |
                                                <button type="button"
                                                        class="btn btn-xs btn-danger"
                                                        data-toggle="modal"
                                                        data-target="#myModalDelete"
                                                        onclick="Deletar('@item.Id', '@Url.Action("Excluir", "Perfil")');">
                                                    Excluir
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                }

                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@* inicio modal*@
<div class="modal fade" id="myModalDetalhes" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <h4 class="modal-title">Detalhes do Perfil</h4>
                <small class="font-bold">Todos os detalhes cadastrados</small>
            </div>
            <div class="modal-body">
                <p>

                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="myModalDelete" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header">
                <h4 class="modal-title">Deletar Perfil</h4>
                <small class="font-bold">Todos os detalhes cadastrados</small>
            </div>
            <div class="modal-body">
                <p>

                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" id="deleteModal">Deletar</button>
            </div>
        </div>
    </div>
</div>
@* fim modal *@

@Scripts.Render("~/bundles/jquery/js")
@Scripts.Render("~/bundles/jqueryui/js")
@Scripts.Render("~/bundles/homer/js")
@Scripts.Render("~/bundles/toastr/js")
@Scripts.Render("~/bundles/sweetAlert/js")

<script src="~/Scripts/PerfilAjaxCall.js"></script>
<script type="text/javascript">

    $(document).ready(function() {

        notificar();

        $('#deleteModal').click(function() {
            var url = '@Url.Action("ExcluirConfirmar", "Perfil")';
            var model = { Id: $('#Id').val() };

            ExcluirConfirmar(model, url);
        });
    });

    function notificar() {

        var notificacao = @(ViewBag.Notificacao.ToString().ToLower());
        if (notificacao === true) {

            setTimeout(function() {
                swal({
                    title: "Good job!",
                    text: "Ação concluida com sucesso!",
                    type: "success"
                });
            },
                1000);
        }
    }
</script>